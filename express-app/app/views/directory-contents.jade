extends templates/standard

block append css
  link(rel='stylesheet', href='/css/directory-contents.css')

block content
  .row-fluid
    #results-list.span12
      h3 Contents of #{directory}
      #filter-wrap
        input.search.span12(id="filter", type="text", placeholder="Type to filter results")
      ul#results.list
        if (contents.length === 0)
          li.result.span12
            p.no-files-found No files found
        else
          each file, iter in contents
            .row-fluid
              li.result.span12(class="#{iter % 2 === 0 ? '' : 'odd'}")
                h4.result-num ##{iter + 1}
                if (file.filename !== null)
                  p.filename #{file.directory}
                  .audio-file
                    audio.span12(src="/media/#{file.filename}", controls)
                      p Your browser doesn't support HTML5 audio
                  p
                    a(href="#{file.directory}/#{file.filename}") #{file.filename}
                else 
                  p.filename #{file.directory}
                  p
                    a(href="/searchDirectory?directory=#{file.directory}") #{file.directory}
block append script
  script(src="/js/search-results.js")
