extends templates/standard

block append css
  link(rel='stylesheet', href='/css/search-results.css')

block content
  h1 Search Results
  #results-list
    #filter-search
      label(for="filter") Filter Results
      input(id="filter", class="search", placeholder="Type to filter results")
    ul#results.list
      if (results.length === 0)
        li.result.clearfix
          p.filename No files found
      else
        each result, iter in results
          li.result.clearfix(class="#{iter % 2 === 0 ? '' : 'odd'}")
            h2 ##{iter + 1}
            p.filename #{result.path}
            .audio-file
              audio(src="/sounds/#{result.filename}", controls)
                p Your browser doesn't support HTML5 audio
              p
                a(href="/sounds/#{result.filename}") #{result.filename}

block append script
  script(src="/js/lib/list.min.js")
  script(src="/js/search-results.js")
