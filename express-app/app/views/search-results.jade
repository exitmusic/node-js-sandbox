extends templates/standard

block append css
  link(rel='stylesheet', href='/stylesheets/search-results.css')

block content
  h1 Search Results
  #results-wrap
    each result, iter in results
      .result.clearfix(class="#{iter % 2 === 0 ? '' : 'odd'}")
        p [#{result.path}] [#{result.filename}] [#{result.ext}]
        audio(src="/sounds/#{result.filename}", controls)
    p Default wave file
    audio(src="/sounds/dohaaa.wav", controls)
      p Your browser doesn't support HTML5 audio
